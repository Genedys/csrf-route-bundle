<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="fantoine_csrf_route.listener.controller.class">Fantoine\CsrfRouteBundle\EventListener\ControllerListener</parameter>
    </parameters>
    <services>
        <service id="fantoine_csrf_route.listener.controller" class="%fantoine_csrf_route.listener.controller.class%">
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="security.csrf.token_manager" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
